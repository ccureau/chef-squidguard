# SquidGuard configuration file
# Automatically generated by chef for <%= node['hostname'] %>
# Local changes will be overwritten

dbhome <%= node['squidguard']['db_dir'] %>
logdir <%= node['squidguard']['log_dir'] %>

<% node['squidguard']['filter'].each do |list| %>
dest <%= list %> {
  domainlist <%= list %>/domains
  urllist <%= list %>/urls
  log <%= list %>.blocked
}
<% end %>

acl {
  default {
    pass <% node['squidguard']['filter'].each do |list| %><%= list %> <% end %> all
    redirect <%= node['squidguard']['filter_redirect'] %>
  }
}
